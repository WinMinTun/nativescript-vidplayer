<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" xmlns:Video="nativescript-vidplayer">
<ScrollView>
    
  <StackLayout>
    <Label text="{{ message }}" class="message" textWrap="true"/>
    <Video:Vidplayer id="video" src="{{ videoSrc }}" autoPlay="true" onComplete="{{ onComplete }}" onError="{{ onError }}" />
  </StackLayout>
</ScrollView>
</Page>